# Minimal runtime-only Dockerfile for BankSync Service (Tilt development)
# Binary is cross-compiled on host and copied in.
# Multi-arch: buildx --platform linux/amd64,linux/arm64,linux/arm/v7 (arm64=Apple Silicon, arm=armv7). Defaults for local.

ARG TARGETPLATFORM=linux/amd64
FROM --platform=${TARGETPLATFORM} alpine:3.19

RUN apk add --no-cache ca-certificates libgcc
WORKDIR /app

# TARGETARCH: amd64 | arm64 (Apple Silicon) | arm (armv7)
ARG TARGETARCH=amd64
COPY ./build_artifacts/${TARGETARCH}/bank_sync /app/bank_sync
RUN chmod +x /app/bank_sync

RUN mkdir -p /app/config /app/doc /app/static_site && chmod -R 777 /app
COPY ./microservices/accounting/bank-sync/config /app/config
COPY ./microservices/accounting/bank-sync/doc /app/doc
COPY ./microservices/accounting/bank-sync/static_site /app/static_site

EXPOSE 8005
ENV RUST_BACKTRACE=1
ENV RUST_LOG=debug

ENTRYPOINT ["/app/bank_sync", "--spec", "/app/doc/openapi.yaml", "--doc-dir", "/app/doc", "--static-dir", "/app/static_site", "--config", "/app/config/config.yaml"]
